<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">0</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.default_schema">public</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        
        <mapping class="klosterteam.happiness_service.Categories" />  
        <mapping class="klosterteam.happiness_service.Event_types" />  
        <mapping class="klosterteam.happiness_service.Events" />  
        <mapping class="klosterteam.happiness_service.Gift_history" />  
        <mapping class="klosterteam.happiness_service.Gifts" />  
        <mapping class="klosterteam.happiness_service.History" />  
        <mapping class="klosterteam.happiness_service.Logins" />  
        <mapping class="klosterteam.happiness_service.Money" />
        <mapping class="klosterteam.happiness_service.Roles" />
        <mapping class="klosterteam.happiness_service.Users" />  
        <mapping class="klosterteam.happiness_service.Vote" />        
    </session-factory>
</hibernate-configuration>